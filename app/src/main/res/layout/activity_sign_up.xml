<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".SignUpActivity">


    <ImageView
        android:id="@+id/imageView_icon_sign_up"
        android:layout_width="192dp"
        android:layout_height="192dp"
        android:src="@drawable/icon_messenger_3"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        tools:ignore="ContentDescription" />

    <ProgressBar
        android:layout_marginTop="20dp"
        android:id="@+id/progress_sign_up"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editText_name_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Name"
        android:inputType="text"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        tools:ignore="Autofill,HardcodedText,VisualLintTextFieldSize" />


    <EditText
        android:id="@+id/editText_email_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:hint="Phone Number or Email"
        android:inputType="textEmailAddress"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        tools:ignore="Autofill,HardcodedText,TextContrastCheck,VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/editText_password_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        tools:ignore="Autofill,HardcodedText,VisualLintTextFieldSize" />

    <Button




        android:id="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/btn_background"
        android:enabled="false"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="Sign Up"
        android:textColor="@color/status_text_color"
        android:textSize="18sp"
        tools:ignore="HardcodedText,VisualLintButtonSize" />

</LinearLayout>